<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserInfoActivity">
    <GridLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layout_search"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@id/toolbar_setting"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            />
        <EditText
            android:id="@+id/input_info_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:background="@drawable/back_inputtext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:editable="false"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/input_info_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:background="@drawable/back_inputtext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            />
        <EditText
            android:id="@+id/input_info_fullname"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:background="@drawable/back_inputtext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/input_info_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:background="@drawable/back_inputtext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/input_info_confirm"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:height="48dp"
            android:background="@drawable/back_inputtext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />


        <Button
            android:id="@+id/btn_update"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            style="@style/btn"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_row="5"
            android:layout_column="1"/>


    </GridLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8BC34A"
        app:title="Thông tin cá nhân"
        app:titleTextColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>